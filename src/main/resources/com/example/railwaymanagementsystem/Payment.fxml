<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.railwaymanagementsystem.controllers.PaymentController"
            fitToWidth="true"
            style="-fx-background-color: #f9fafb; -fx-padding: 0;">
    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f9fafb;">

    <!-- Header -->
    <VBox spacing="5">
        <Label text="ðŸ’³ Payment" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e6b47;"/>
        <Label text="Complete payment for your bookings" style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"/>
    </VBox>

    <!-- No Bookings Label -->
    <Label fx:id="noBookingsLabel" text="No pending payments. All your bookings are paid." 
           style="-fx-font-size: 16px; -fx-text-fill: #6b7280; -fx-padding: 40;" 
           visible="false"/>

    <!-- Bookings List -->
    <VBox fx:id="bookingsListContainer" spacing="10" visible="false">
        <Label text="Pending Payments:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
        <VBox fx:id="bookingsContainer" spacing="8"/>
    </VBox>

    <!-- Payment Details -->
    <VBox fx:id="paymentDetailsContainer" spacing="15" 
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-color: #e5e7eb; -fx-border-width: 1px;"
          visible="false">
        
        <!-- Booking Summary -->
        <VBox spacing="12">
            <Label text="Booking Summary" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
            
            <GridPane hgap="12" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <Label text="PNR:" GridPane.columnIndex="0" style="-fx-font-weight: 600;"/>
                <Label fx:id="bookingInfoLabel" GridPane.columnIndex="1"/>
                
                <Label text="Train:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600;"/>
                <Label fx:id="trainInfoLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Route:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600;"/>
                <Label fx:id="routeInfoLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600;"/>
                <Label fx:id="dateInfoLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Seats:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: 600;"/>
                <Label fx:id="seatsInfoLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                
                <Label text="Total Amount:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-font-size: 16px;"/>
                <Label fx:id="amountInfoLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e6b47;"/>
            </GridPane>
        </VBox>

        <Separator/>

        <!-- Payment Method Selection -->
        <VBox spacing="12">
            <Label text="Select Payment Method" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
            
            <VBox spacing="8">
                <RadioButton fx:id="cashOnDeliveryRadio" text="ðŸ’° Cash on Delivery" 
                             style="-fx-font-size: 13px;"/>
                <RadioButton fx:id="cardRadio" text="ðŸ’³ Credit/Debit Card" 
                             style="-fx-font-size: 13px;"/>
            </VBox>

            <!-- Card Details -->
            <VBox fx:id="cardDetailsContainer" spacing="12" 
                  style="-fx-background-color: #f9fafb; -fx-padding: 15; -fx-border-radius: 8px; -fx-background-radius: 8px;"
                  visible="false">
                <Label text="Card Details" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
                
                <TextField fx:id="cardNumberField" promptText="Card Number (16 digits)" 
                           maxWidth="Infinity"/>
                <TextField fx:id="cardNameField" promptText="Cardholder Name" 
                           maxWidth="Infinity"/>
                
                <HBox spacing="10">
                    <TextField fx:id="expiryField" promptText="MM/YY" 
                               HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="cvvField" promptText="CVV" 
                               prefWidth="120"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #e5e7eb; -fx-text-fill: #1f2937; -fx-padding: 8 18; -fx-background-radius: 6px; -fx-cursor: hand;"/>
            <Button fx:id="clickToPayButton" text="ðŸ’³ Click to Pay" onAction="#handleClickToPay"
                    style="-fx-background-color: #1e6b47; -fx-text-fill: white; -fx-padding: 8 25; -fx-background-radius: 6px; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 13px;"/>
        </HBox>
    </VBox>
    </VBox>
</ScrollPane>

